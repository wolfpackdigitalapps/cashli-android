<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ClaimCashFragmentBinding">

        <variable
            name="viewModel"
            type="com.wolfpackdigital.cashli.presentation.claimCash.ClaimCashViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_claim_cash"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/background_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/ic_dots"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/claimCashBgDotsTint" />

            <ImageButton
                android:id="@+id/back_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@null"
                android:onClick="@{() -> viewModel.back()}"
                android:padding="@dimen/dimen_16dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_tv"
                style="@style/TextView.H1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:text="@string/claim_cash_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/back_ib" />

            <ImageView
                android:id="@+id/title_end_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_smiley_face"
                app:layout_constraintBottom_toBottomOf="@id/title_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/title_tv"
                app:layout_constraintTop_toTopOf="@id/title_tv" />

            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/cash_amount_ml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_48dp"
                android:background="@drawable/rounded_layout_20dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:layoutDescription="@xml/cash_amount_description"
                app:layout_constraintTop_toBottomOf="@id/title_tv"
                tools:showPaths="true">

                <ImageView
                    android:id="@+id/cash_amount_start_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_32dp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_cash_amount_start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:id="@+id/cash_amount_tv"
                    style="@style/TextView.H6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:text="@string/claim_cash_cash_amount"
                    app:layout_constraintBottom_toBottomOf="@id/cash_amount_start_iv"
                    app:layout_constraintStart_toEndOf="@id/cash_amount_start_iv"
                    app:layout_constraintTop_toTopOf="@id/cash_amount_start_iv" />

                <ImageView
                    android:id="@+id/cash_amount_arrow_iv"
                    android:layout_width="@dimen/dimen_16dp"
                    android:layout_height="@dimen/dimen_16dp"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_arrow_forward"
                    app:layout_constraintBottom_toBottomOf="@id/cash_amount_tv"
                    app:layout_constraintStart_toEndOf="@id/cash_amount_tv"
                    app:layout_constraintTop_toTopOf="@id/cash_amount_tv" />

                <TextView
                    android:id="@+id/cash_amount_value_tv"
                    style="@style/TextView.S2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_12dp"
                    android:maxLines="1"
                    android:text="@{@string/dollar_amount_float(viewModel.amount)}"
                    android:textAlignment="textStart"
                    android:textColor="@color/green71"
                    app:layout_constraintBottom_toBottomOf="@id/cash_amount_tv"
                    app:layout_constraintEnd_toStartOf="@id/save_edit_barrier"
                    app:layout_constraintStart_toEndOf="@id/cash_amount_arrow_iv"
                    app:layout_constraintTop_toTopOf="@id/cash_amount_tv"
                    tools:text="$1200.00" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/save_edit_barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:constraint_referenced_ids="edit_cash_amount_ib, save_tv" />

                <ImageButton
                    android:id="@+id/edit_cash_amount_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_edit"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@id/cash_amount_start_iv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cash_amount_start_iv" />

                <TextView
                    android:id="@+id/save_tv"
                    style="@style/TextView.S2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:onClick="@{() -> viewModel.saveAmount()}"
                    android:text="@string/save"
                    android:textColor="@color/green71"
                    app:layout_constraintBottom_toBottomOf="@id/cash_amount_start_iv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cash_amount_start_iv" />


                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/cash_amount_sb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_4dp"
                    android:layout_marginTop="@dimen/dimen_32dp"
                    android:max="100"
                    android:maxHeight="@dimen/dimen_10dp"
                    android:min="0"
                    android:minHeight="@dimen/dimen_10dp"
                    android:progress="@={viewModel.amountPerc}"
                    android:progressDrawable="@drawable/bg_seekbar_progress"
                    android:splitTrack="false"
                    android:thumb="@drawable/bg_seekbar_thumb"
                    android:thumbOffset="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cash_amount_start_iv"
                    app:layout_constraintVertical_bias="0"
                    tools:progress="100" />

                <TextView
                    android:id="@+id/cash_amount_label_tv"
                    style="@style/TextView.C2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:textColor="@color/colorGrayB6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cash_amount_sb"
                    tools:text="$10" />

            </androidx.constraintlayout.motion.widget.MotionLayout>

            <ImageView
                android:id="@+id/alert_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_alert"
                app:layout_constraintStart_toStartOf="@id/cash_amount_ml"
                app:layout_constraintTop_toBottomOf="@id/cash_amount_ml" />

            <TextView
                android:id="@+id/due_date_label_tv"
                style="@style/TextView.H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:text="@string/claim_cash_due_date"
                app:layout_constraintBottom_toBottomOf="@id/alert_iv"
                app:layout_constraintStart_toEndOf="@id/alert_iv"
                app:layout_constraintTop_toTopOf="@id/alert_iv" />

            <TextView
                android:id="@+id/due_date_tv"
                style="@style/TextView.S1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:text="@{viewModel.dueDate}"
                android:textAlignment="textEnd"
                app:layout_constraintBottom_toBottomOf="@id/due_date_label_tv"
                app:layout_constraintEnd_toEndOf="@id/cash_amount_ml"
                app:layout_constraintStart_toEndOf="@id/due_date_label_tv"
                app:layout_constraintTop_toTopOf="@id/due_date_label_tv"
                tools:text="February 15th, 2023" />

            <TextView
                android:id="@+id/delivery_method_title_tv"
                style="@style/TextView.H4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_48dp"
                android:text="@string/claim_cash_delivery_method_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/alert_iv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/delivery_method_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen_8dp"
                app:layout_constraintTop_toBottomOf="@id/delivery_method_title_tv"
                tools:itemCount="3"
                tools:listitem="@layout/item_delivery_method" />

            <TextView
                android:id="@+id/delivery_method_disclaimer"
                style="@style/TextView.S1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:text="@{viewModel.selectedDeliveryMethod.deliveryMethod.disclaimer}"
                android:textAlignment="textStart"
                app:layout_constraintTop_toBottomOf="@id/delivery_method_rv"
                tools:text="@string/delivery_method_express_disclaimer" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue"
                style="@style/Widget.Cashli.Button.PrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_48dp"
                android:layout_marginBottom="@dimen/dimen_36dp"
                android:text="@string/continue_name"
                app:contentPadding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/delivery_method_disclaimer"
                app:layout_constraintVertical_bias="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>