<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- BottomNavBar -->
    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.Text</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Text.Active</item>
        <item name="itemTextColor">@color/nav_text_color_selector</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorWhiteF5</item>
    </style>

    <style name="BottomNavigationView.Text" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BottomNavigationView.Text.Active">
        <item name="android:textColor">@color/colorGrayB6</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Cashli.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/size_18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dimen_48dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="Widget.Cashli.Button.Primary.Language">
        <item name="fontFamily">@font/lato_semi_bold</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="cornerRadius">@dimen/dimen_28dp</item>
    </style>

    <style name="Widget.Cashli.Button.Accent">
        <item name="android:theme">@style/ButtonTheme.Accent</item>
        <item name="android:height">@dimen/dimen_64dp</item>
        <item name="rippleColor">@color/colorPinkBF</item>
    </style>

    <style name="Widget.Cashli.Button.PrimaryDark">
        <item name="android:theme">@style/ButtonTheme.PrimaryDark</item>
        <item name="android:height">@dimen/dimen_64dp</item>
        <item name="rippleColor">@color/colorGray64</item>
    </style>

    <style name="Widget.Cashli.Button.Primary">
        <item name="android:theme">@style/ButtonTheme.Primary</item>
        <item name="android:height">@dimen/dimen_64dp</item>
        <item name="rippleColor">@color/colorGray64</item>
    </style>

    <style name="Widget.Cashli.Button.Primary.CountryCode">
        <item name="android:theme">@style/ButtonTheme.Primary</item>
        <item name="cornerRadius">@dimen/dimen_10dp</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textColor">@color/colorGrayB6</item>
        <item name="rippleColor">@color/colorGray64</item>
    </style>

    <style name="Widget.Cashli.Button.NoBackground" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:height">@dimen/dimen_48dp</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@null</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="ButtonTheme" />

    <style name="ButtonTheme.Accent">
        <item name="android:colorPrimary">@color/btn_background_accent_selector</item>
        <item name="android:backgroundTint">@color/btn_background_accent_selector</item>
    </style>

    <style name="ButtonTheme.Primary">
        <item name="android:colorPrimary">@color/btn_background_primary_selector</item>
        <item name="android:backgroundTint">@color/btn_background_primary_selector</item>
    </style>

    <style name="ButtonTheme.PrimaryDark" tools:ignore="UnusedResources">
        <item name="android:colorPrimary">@color/btn_background_primary_dark_selector</item>
        <item name="android:backgroundTint">@color/btn_background_primary_dark_selector</item>
    </style>

    <!-- TextView -->
    <style name="TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/size_14sp</item>
    </style>

    <style name="TextView.Regular" parent="TextView">
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="TextView.Bold" parent="TextView">
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextView.SemiBold" parent="TextView">
        <item name="fontFamily">@font/lato_semi_bold</item>
    </style>

    <style name="TextView.SemiBold.Label">
        <item name="android:textSize">@dimen/size_12sp</item>
    </style>

    <!-- TextInputEditText -->
    <style name="BaseTextInputEditText">
        <item name="android:background">@drawable/text_input_edit_text_background_selector</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingVertical">@dimen/dimen_16dp</item>
        <item name="android:paddingStart">@dimen/dimen_20dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/colorGrayB6</item>
        <item name="hintTextColor">@color/colorGrayB6</item>
    </style>

    <!-- ScrollView -->
    <style name="ScrollView">
        <item name="android:fillViewport">true</item>
    </style>

    <style name="ScrollView.VerticalDarkScrollBar">
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollview_thumb</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="TextView.H1" parent="TextView">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/size_34sp</item>
    </style>

    <style name="TextView.H4" parent="TextView">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/size_20sp</item>
    </style>

    <style name="TextView.H6" parent="TextView">
        <item name="fontFamily">@font/lato_semi_bold</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>

    <style name="TextView.S1" parent="TextView">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/size_14sp</item>
    </style>

    <style name="TextView.S2" parent="TextView">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/size_14sp</item>
    </style>

    <style name="TextView.C1" parent="TextView">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/size_12sp</item>
    </style>

    <style name="TextView.C2" parent="TextView">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/size_12sp</item>
    </style>

</resources>
