<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Cashli.Button.Radius28dp" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/lato</item>
        <item name="fontWeight">600</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dimen_28dp</item>
    </style>

</resources>
