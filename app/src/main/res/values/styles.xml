<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Cashli.Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/lato</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">@dimen/size_18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dimen_48dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Widget.Cashli.Button.Primary.Language">
        <item name="fontWeight">600</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="cornerRadius">@dimen/dimen_28dp</item>
    </style>

    <style name="Widget.Cashli.Button.Accent">
        <item name="android:theme">@style/ButtonTheme.Accent</item>
        <item name="android:height">@dimen/dimen_64dp</item>
        <item name="rippleColor">@color/colorPinkBF</item>
    </style>

    <style name="Widget.Cashli.Button.PrimaryDark">
        <item name="android:theme">@style/ButtonTheme.PrimaryDark</item>
        <item name="android:height">@dimen/dimen_64dp</item>
        <item name="rippleColor">@color/colorGray64</item>
    </style>

    <style name="Widget.Cashli.Button.Primary">
        <item name="android:theme">@style/ButtonTheme.Primary</item>
        <item name="android:height">@dimen/dimen_64dp</item>
        <item name="rippleColor">@color/colorGray64</item>
    </style>

    <style name="Widget.Cashli.Button.NoBackground" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:height">@dimen/dimen_48dp</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="fontWeight">700</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="ButtonTheme" />

    <style name="ButtonTheme.Accent">
        <item name="colorPrimary">@color/btn_background_accent_selector</item>
        <item name="backgroundTint">@color/btn_background_accent_selector</item>
    </style>

    <style name="ButtonTheme.Primary">
        <item name="colorPrimary">@color/btn_background_primary_selector</item>
        <item name="backgroundTint">@color/btn_background_primary_selector</item>
    </style>

    <style name="ButtonTheme.PrimaryDark">
        <item name="colorPrimary">@color/btn_background_primary_dark_selector</item>
        <item name="backgroundTint">@color/btn_background_primary_dark_selector</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/size_14sp</item>
    </style>

    <style name="TextView_400" parent="TextView">
        <item name="fontWeight">400</item>
    </style>

    <style name="TextView_700" parent="TextView">
        <item name="fontWeight">700</item>
    </style>

</resources>
