<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- BottomNavBar -->
    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.Text</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Text.Active</item>
        <item name="itemTextColor">@color/nav_text_color_selector</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorWhiteF5</item>
    </style>

    <style name="BottomNavigationView.Text" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BottomNavigationView.Text.Active">
        <item name="android:textColor">@color/colorGrayB6</item>
    </style>

    <style name="RoundedCornersDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/dimen_20dp</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Cashli.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/size_18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dimen_48dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="Widget.Cashli.Button.Primary.Language">
        <item name="fontFamily">@font/lato_semi_bold</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="cornerRadius">@dimen/dimen_28dp</item>
    </style>

    <style name="Widget.Cashli.Button.Accent">
        <item name="android:theme">@style/ButtonTheme.Accent</item>
        <item name="android:height">@dimen/dimen_64dp</item>
        <item name="rippleColor">@color/colorPinkBF</item>
    </style>

    <style name="Widget.Cashli.Button.PrimaryDark">
        <item name="android:theme">@style/ButtonTheme.PrimaryDark</item>
        <item name="android:height">@dimen/dimen_64dp</item>
        <item name="rippleColor">@color/colorGray64</item>
    </style>

    <style name="Widget.Cashli.Button.Primary">
        <item name="android:theme">@style/ButtonTheme.Primary</item>
        <item name="android:height">@dimen/dimen_64dp</item>
        <item name="rippleColor">@color/colorGray64</item>
    </style>

    <style name="Widget.Cashli.Button.Primary.CountryCode">
        <item name="android:theme">@style/ButtonTheme.Primary</item>
        <item name="cornerRadius">@dimen/dimen_10dp</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textColor">@color/colorGrayB6</item>
        <item name="rippleColor">@color/colorGray64</item>
    </style>

    <style name="Widget.Cashli.Button.NoBackground" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:height">@dimen/dimen_48dp</item>
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@null</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="ButtonTheme" />

    <style name="ButtonTheme.Accent">
        <item name="android:colorPrimary">@color/btn_background_accent_selector</item>
        <item name="android:backgroundTint">@color/btn_background_accent_selector</item>
    </style>

    <style name="ButtonTheme.Primary">
        <item name="android:colorPrimary">@color/btn_background_primary_selector</item>
        <item name="android:backgroundTint">@color/btn_background_primary_selector</item>
    </style>

    <style name="ButtonTheme.PrimaryDark" tools:ignore="UnusedResources">
        <item name="android:colorPrimary">@color/btn_background_primary_dark_selector</item>
        <item name="android:backgroundTint">@color/btn_background_primary_dark_selector</item>
    </style>

    <!--    Radio Button-->
    <style name="CashliRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:button">@drawable/selector_radio_button</item>
        <item name="buttonTint">@color/btn_radio_tint_selector</item>
        <item name="android:maxHeight">@dimen/dimen_40dp</item>
        <item name="android:minHeight">@dimen/dimen_40dp</item>
        <item name="android:paddingHorizontal">@dimen/dimen_8dp</item>
        <item name="android:textAppearance">@style/TextView.P1</item>
        <item name="android:textColor">@color/btn_radio_tint_selector</item>
    </style>

    <!-- TextView -->
    <style name="TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/size_14sp</item>
    </style>

    <style name="TextView.Regular" parent="TextView">
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="TextView.Bold" parent="TextView">
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextView.SemiBold" parent="TextView">
        <item name="fontFamily">@font/lato_semi_bold</item>
    </style>

    <style name="TextView.SemiBold.Label">
        <item name="android:textSize">@dimen/size_12sp</item>
    </style>

    <!-- TextInputEditText -->
    <style name="BaseTextInputEditText">
        <item name="android:background">@drawable/text_input_edit_text_background_selector</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingVertical">@dimen/dimen_16dp</item>
        <item name="android:paddingStart">@dimen/dimen_20dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/colorGrayB6</item>
        <item name="hintTextColor">@color/colorGrayB6</item>
    </style>

    <style name="RecyclerView">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:orientation">vertical</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="Switch.Green" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="useMaterialThemeColors">false</item>
        <item name="trackTint">@color/switch_track_selector</item>
        <item name="thumbTint">@color/switch_thumb_selector</item>
    </style>

    <style name="BaseTextInputEditTextLight" parent="BaseTextInputEditText">
        <item name="android:background">@drawable/text_input_edit_text_background_light_selector
        </item>
        <item name="android:textColor">@color/colorGray76</item>
        <item name="android:textColorHint">@color/colorGrayB6</item>
        <item name="hintTextColor">@color/colorGrayB6</item>
    </style>

    <style name="EditTextBaseTheme">
        <item name="customTextInputEditTextStyle">@style/BaseTextInputEditText</item>
    </style>

    <style name="EditTextBaseLightTheme">
        <item name="customTextInputEditTextStyle">@style/BaseTextInputEditTextLight</item>
    </style>

    <!-- ScrollView -->
    <style name="ScrollView">
        <item name="android:fillViewport">true</item>
    </style>

    <style name="ScrollView.VerticalPinkScrollBar">
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollview_thumb</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="elevation">@dimen/dimen_0dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="tint">@color/colorWhite</item>
    </style>

    <style name="FloatingActionButton.Expanded">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/dimen_0dp</item>
        <item name="android:paddingEnd">@dimen/dimen_0dp</item>
    </style>

    <style name="TextView.H1" parent="TextView">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/size_34sp</item>
    </style>

    <style name="TextView.H2" parent="TextView">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/size_28sp</item>
    </style>

    <style name="TextView.H4" parent="TextView">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/size_20sp</item>
    </style>

    <style name="TextView.H5" parent="TextView">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/size_18sp</item>
    </style>

    <style name="TextView.H6" parent="TextView">
        <item name="fontFamily">@font/lato_semi_bold</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>

    <style name="TextView.S1" parent="TextView">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/size_14sp</item>
    </style>

    <style name="TextView.S2" parent="TextView">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/size_14sp</item>
    </style>

    <style name="TextView.C1" parent="TextView">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/size_12sp</item>
    </style>

    <style name="TextView.P1" parent="TextView">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>

</resources>
